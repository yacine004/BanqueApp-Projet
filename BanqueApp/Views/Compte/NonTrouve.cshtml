@{
    ViewData["Title"] = "Compte introuvable";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">❌ Erreur de recherche</h4>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                    <h3 class="mt-3">Compte introuvable</h3>
                    <p class="text-muted">Le numéro de compte que vous avez saisi n'existe pas dans notre système.</p>
                    <div class="mt-4">
                        <a asp-controller="Compte" asp-action="Details" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Retour à la recherche
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
